menuconfig IMAGEOPT
	bool "Image configuration"
	default n
source "package/*/image-config.in"
menu "Base system"

	config PACKAGE_alibaba
		tristate "alibaba........................................................ SMS Proxy"
		default y if DEFAULT_alibaba
		default m if ALL
		select PACKAGE_libcg
		help
		 SMS Proxy

	config PACKAGE_libcg-examples
		tristate "libcg-examples.............................................. SDK Examples"
		default y if DEFAULT_libcg-examples
		default m if ALL
		select PACKAGE_libcg
		select PACKAGE_libjson-c
		help
		 SDK Examples

	config PACKAGE_libcg-sqlite_examples
		tristate "libcg-sqlite_examples................................ SDK sqlite examples"
		default y if DEFAULT_libcg-sqlite_examples
		default m if ALL
		select PACKAGE_libjson-c
		select PACKAGE_libsqlite3
		select PACKAGE_libcg
		help
		 This separate package contains the libcg examples that require sqlite.
		 
		 If you want to try this package you will first need to initialise the openWRT
		 feeds and install the libsqlite3 package:
		 
		 	./scripts/feeds update
		 	./scripts/feeds install libsqlite3
		 
		 After performing these commands in your SDK root directory you can enable
		 this package and it will automatically select libsqlite3 too.

	config PACKAGE_opkg
		tristate "opkg...................................... opkg package management system"
		default y if DEFAULT_opkg
		default m if ALL
		help
		 Lightweight package management system
		   opkg is the opkg Package Management System, for handling
		   installation and removal of packages on a system. It can
		   recursively follow dependencies and download all packages
		   necessary to install a particular package.
		 
		   opkg knows how to install both .ipk and .deb packages.
		 http://wiki.openmoko.org/wiki/Opkg

	config PACKAGE_sdk_base
		tristate "sdk_base.................................... Option Firmware Dependencies"
		default y if DEFAULT_sdk_base
		default m if ALL
		select PACKAGE_zlib
		select PACKAGE_libcurl
		select PACKAGE_libpthread
		select PACKAGE_libopenssl
		select PACKAGE_curl
		select PACKAGE_libtool
		select PACKAGE_libreadline
		select PACKAGE_librt
		help
		 Option Firmware Dependencies

endmenu

menu "iButton-3rd-party"

	config PACKAGE_dallas-sdk
		tristate "dallas-sdk....................................... Owire Public Domain Kit"
		default y if DEFAULT_dallas-sdk
		default m if ALL
		select PACKAGE_kmod-cortex
		help
		 Owire Public Domain Kit
		 http://files.maximintegrated.com/sia_bu/public/


		source "package/dallas-sdk/Config.in"

endmenu

menu "Utilities"

	config PACKAGE_gdb
		tristate "gdb......................................................... GNU Debugger"
		default y if DEFAULT_gdb
		default m if ALL
		select PACKAGE_libncurses
		select PACKAGE_libreadline
		depends !(avr32||cris)
		help
		 GDB, the GNU Project debugger, allows you to see what is going on `inside'
		 another program while it executes -- or what another program was doing at the
		 moment it crashed.

	config PACKAGE_gdbserver
		tristate "gdbserver................................. Remote server for GNU Debugger"
		default y if DEFAULT_gdbserver
		default m if ALL
		depends !(avr32||cris)
		help
		 GDBSERVER is a program that allows you to run GDB on a different machine than the
		 one which is running the program being debugged.

endmenu

